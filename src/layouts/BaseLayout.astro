---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import experiencieYears from '../utils/experiencieYears';

const { siteTitle } = Astro.props
const url = 'https://denis-anfruns.dev';
const description = `Desarrollador multiplataforma Full Stack con +${experiencieYears()} años de experiencia`;
const image = `${url}/denis-anfruns-millan.png`;
---

<!DOCTYPE html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<title>{siteTitle}</title>

		<!-- Descripción SEO -->
  	<meta name='description' content={description} />

		<!-- Twitter Cards -->
		<meta name='twitter:site' content='@HunkStalker'>
		<meta name='twitter:creator' content='@HunkStalker'>
		<meta name='twitter:title' content={siteTitle} />
		<meta name='twitter:description' content={description} />
		<meta name='twitter:card' content='summary_large_image' />
		<meta name='twitter:image' content={image} />
		<meta name='twitter:image:width' content='1200' />
		<meta name='twitter:image:height' content='630' />

		<!-- Open Graph -->
		<meta property='og:type' content='profile' />
		<meta property='og:locale' content='es_ES' />
		<meta property='og:title' content={siteTitle} />
		<meta property='og:image' content={image} />
		<meta property='og:image:type' content='image/png'>
		<meta property='og:image:width' content='1200' />
		<meta property='og:image:height' content='630' />
		<meta property='og:image:alt' content='Vista previa de Denis Anfruns Millán - Web portfolio' />
		<meta property='og:description' content={description} />
		<meta property='og:url' content={url} />
		<meta property='og:type' content='website' />
		
		<meta name='generator' content={Astro.generator} />

    <!-- Preload fonts -->
    <link rel='preload' href='/fonts/inter-variable.woff2' as='font' type='font/woff2' crossorigin />

		<!-- Icon -->
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!-- Alternate / multilenguaje -->
    <link rel='alternate' hreflang='x-default' href='https://denis-anfruns.dev/' />
		<script>
			const theme = localStorage.getItem('theme');
			document.documentElement.classList.toggle('dark', theme === 'dark');
		</script>
	</head>
	<body class='flex flex-col min-h-screen'>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>