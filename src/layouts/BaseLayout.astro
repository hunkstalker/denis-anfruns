---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import experiencieYears from '../utils/experiencieYears';

const { siteTitle } = Astro.props
const url = "https://denis-anfruns.dev";
const description = `Web portfolio. Desarrollador multiplataforma Full Stack con +${experiencieYears()} años de experiencia`;
const image = 'public/denis-anfruns-millan.png';
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<title>{siteTitle}</title>

		<!-- Descripción SEO -->
  	<meta name="description" content={description} />

		<!-- Open Graph -->
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:image" content={image} />

		<!-- Twitter Cards -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={siteTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />

		<!-- <meta name='description' lang='ca' content={`Web portfolio. Desenvolupador multiplataforma Full Stack amb +${years} anys d'experiencia`} />
		<meta name='description' lang='en' content={`Web portfolio. Full Stack multiplatform developer with +${years} years experiencie`} /> -->
		<meta name='generator' content={Astro.generator} />

    <!-- Preload fonts -->
    <link rel="preload" href="/fonts/inter-variable.woff2" as="font" type="font/woff2" crossorigin />

		<!-- Icon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Alternate / multilenguaje -->
    <link rel="alternate" hreflang="x-default" href="https://denis-anfruns.dev/" />
		<script>
			const theme = localStorage.getItem('theme');
			document.documentElement.classList.toggle('dark', theme === 'dark');
		</script>
	</head>
	<body class='flex flex-col min-h-screen'>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>