---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import SocialLinks from "../components/SocialLinks.astro";
const year = new Date().getFullYear();
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Denis Anfruns' Web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="container mx-auto lg:px-32">
		<Nav/>
		<slot/>
		<footer class="text-center">
			<SocialLinks/>
			<p class="mt-2 mx-20 mb-24">&copy; {year} Denis Anfruns Mill√°n. Todos los derechos reservados.</p>
			<a class="flex justify-center" href="https://astro.build/" target="_blank">
				<p class="mb-8">Powered by <span class="text-[#e63ba9] font-bold">Astro</span></p>
				<img class="h-5 mt-1 mx-2" src="../../public/astroLogoDark.svg" alt="Astro logo"/>
			</a>
		</footer>
	</body>
</html>