---
import BaseLayout from './BaseLayout.astro'
import Nav from '../components/layout/Nav.astro'

interface Props {
	title: string
	description?: string
	lang: 'es' | 'en' | 'ca'
	image?: string
	siteTitle?: string
	robots?: string
	glass?: boolean
	isWide?: boolean
}

const { title, description, lang, image, siteTitle, robots, glass = true, isWide = false } = Astro.props

const glassClasses = glass
	? 'rounded-2xl border border-stone-300/50 bg-stone-200/80 p-6 shadow-xl shadow-stone-400/10 dark:border-zinc-800/50 dark:bg-zinc-950/80 dark:shadow-black/20 lg:p-8'
	: ''

const containerClasses = isWide 
	? 'mx-auto w-full max-w-[1280px] px-4 pb-12 pt-20 md:pt-28' 
	: 'container mx-auto px-4 pb-12 pt-20 md:pt-28'
---

<BaseLayout
	siteTitle={siteTitle || title}
	description={description}
	lang={lang}
	image={image}
	robots={robots}>
	<Nav lang={lang} />

	<div class={containerClasses}>
		<div class:list={['grid grid-cols-1 gap-8 lg:grid-cols-12 lg:gap-12', glassClasses]}>
			<slot />
		</div>
	</div>
</BaseLayout>
