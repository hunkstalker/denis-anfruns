---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Nav from '../../../components/Nav.astro';
import { languages } from '../../../i18n/ui';
import SeriesWidget from '../../../components/SeriesWidget.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import { getLangFromSlug, getBaseSlug, type SupportedLang } from '../../../utils/blogI18n';
import ChevronUp from '../../../icons/chevron-up.svg';
import ChevronRight from '../../../icons/chevron-right.svg';
import ChevronLeft from '../../../icons/chevron-left.svg';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	const langs = Object.keys(languages).filter(l => l !== 'es') as SupportedLang[];
  
	// For each non-Spanish language, create routes for posts that exist in that language
	return langs.flatMap(lang => 
		posts
			.filter(post => getLangFromSlug(post.slug) === lang)
			.map((post) => ({
				params: { lang, slug: getBaseSlug(post.slug) },
				props: post,
			}))
	);
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { lang } = Astro.params;
const { Content, headings } = await post.render();

// Compute next post in series (if any)
let nextPost: CollectionEntry<'blog'> | null = null;
if (post.data.series) {
  const allPosts = await getCollection('blog');
  const seriesPosts = allPosts
    .filter(p => p.data.series === post.data.series && getLangFromSlug(p.slug) === lang)
    .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
  const currentIndex = seriesPosts.findIndex(p => p.slug === post.slug);
  nextPost = seriesPosts[currentIndex + 1] || null;
}
---

<BaseLayout siteTitle={post.data.title} lang={lang}>
  <Nav lang={lang as 'es' | 'en' | 'ca'} />
  
  <!-- Changed main container to support grid -->
	<div class="container mx-auto px-4 py-8 pt-20 md:pt-28">
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      
      <!-- Article Content -->
      <article class="lg:col-span-8 xl:col-span-9 prose dark:prose-invert lg:prose-xl max-w-none">
        <div class="mb-8 not-prose">
          {post.data.heroImage && (
             <div class="relative rounded-xl overflow-hidden shadow-lg mb-6 aspect-video">
               <img src={post.data.heroImage} alt="" class="absolute inset-0 w-full h-full object-cover" />
             </div>
          )}
          
          <div class="flex flex-wrap items-center gap-4 text-sm text-zinc-500 mb-4 font-mono">
             <time datetime={post.data.pubDate.toISOString()}>
               {post.data.pubDate.toLocaleString(lang, { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })}
             </time>
          </div>

          <h1 class="text-4xl md:text-5xl font-bold dark:text-white mb-6 leading-tight text-balance">{post.data.title}</h1>
          
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map(tag => (
               <span class="bg-zinc-100 dark:bg-zinc-800 px-2.5 py-1 rounded-md text-sm font-medium text-zinc-600 dark:text-zinc-400 border border-zinc-200 dark:border-zinc-700/50">#{tag}</span>
            ))}
          </div>
          <hr class="border-zinc-200 dark:border-zinc-800 mt-8"/>
        </div>

        <Content />

        <!-- Article Footer Navigation -->
        <footer class="mt-16 pt-8 border-t border-zinc-200 dark:border-zinc-700 not-prose">
          <div class="flex items-center justify-between">
            <!-- Scroll to Top -->
            <button 
              id="scroll-to-top"
              class="flex items-center gap-2 text-sm font-medium text-zinc-500 hover:text-[--tangerine] transition-colors group"
            >
              <ChevronUp class="group-hover:-translate-y-0.5 transition-transform" />
              Volver arriba
            </button>
            
            <!-- Next Article (if in series) -->
            {nextPost && (
              <a 
                href={`/${lang}/blog/${getBaseSlug(nextPost.slug)}/`}
                class="flex items-center gap-2 text-sm font-medium text-zinc-500 hover:text-[--tangerine] transition-colors group no-underline"
              >
                Siguiente
                <ChevronRight class="group-hover:translate-x-1 transition-transform" />
              </a>
            )}
          </div>
        </footer>

        <script>
          document.getElementById('scroll-to-top')?.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
          });
        </script>
      </article>

      <!-- Sidebar (Navigation) -->
      <aside class="hidden lg:block lg:col-span-4 xl:col-span-3">
        <div class="sticky top-32 space-y-8">
            <!-- Series Widget (if applicable) -->
            {post.data.series && (
              <SeriesWidget seriesId={post.data.series} currentSlug={post.slug} lang={lang} />
            )}

            <!-- Table of Contents -->
            <TableOfContents headings={headings} />
            
            <!-- Back to Blog -->
            <div class="mt-8 pt-8 border-t border-zinc-100 dark:border-zinc-800">
              <a href={`/${lang}/blog`} class="flex items-center gap-2 text-sm font-medium text-zinc-500 hover:text-zinc-900 dark:hover:text-white transition-colors">
                <ChevronLeft />
                Volver al Jard√≠n
              </a>
            </div>
        </div>
      </aside>

    </div>
	</div>
  
  <!-- Extra spacing before footer -->
  <div class="h-16 md:h-24"></div>
</BaseLayout>
