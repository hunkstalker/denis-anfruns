---
import LinkedIn from '../icons/linkedin.svg';
import Github from '../icons/github.svg';
import Mastodon from '../icons/mastodon.svg';
import Twitter from '../icons/twitter.svg';
import Bluesky from '../icons/bluesky.svg';
---

<ul class='flex flex-wrap place-content-around md:flex-row justify-center items-center mt-6 mb-10 gap-6 md:gap-6'>
	<li class='hover:bg-[#0077b5]/10 dark:hover:bg-[#0077b5]/30 rounded-lg p-2 transition-all duration-200 ease-out hover:opacity-100 hover:scale-125'>
		<a class='list-none' href='https://www.linkedin.com/in/denis-anfruns/' title='LinkedIn' target='_blank' rel='noopener noreferrer'>
			<LinkedIn class='text-[#0077b5]' width='24' height='24' />
		</a>
	</li>
	<li class='hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg p-2 transition-all duration-200 ease-out hover:opacity-100 hover:scale-125'>
		<a class='list-none' href='https://github.com/hunkstalker' title='GitHub' target='_blank' rel='noopener noreferrer'>
			<Github class='text-gray-800 dark:text-gray-200' width='24' height='24' />
		</a>
	</li>
	<li class='hover:bg-[#228DFF]/10 dark:hover:bg-[#228DFF]/30 rounded-lg p-2 transition-all duration-200 ease-out hover:opacity-100 hover:scale-125'>
		<a class='list-none' href='https://bsky.app/profile/hunkstalker.bsky.social' title='Bluesky' target='_blank' rel='noopener noreferrer'>
			<Bluesky class='text-[#228DFF]' width='24' height='24' />
		</a>
	</li>
	<li class='hover:bg-[#6364FF]/10 dark:hover:bg-[#6364FF]/30 rounded-lg p-2 transition-all duration-200 ease-out hover:opacity-100 hover:scale-125'>
		<a class='list-none' rel='me noopener noreferrer' href='https://fosstodon.org/@hunkstalker' title='Mastodon@Fosstodon' target='_blank'>
			<Mastodon class='text-[#6364FF]' width='24' height='24' />
		</a>
	</li>
	<li class='hover:bg-[#1da1f2]/10 dark:hover:bg-[#1da1f2]/30 rounded-lg p-2 transition-all duration-200 ease-out hover:opacity-100 hover:scale-125'>
		<a class='list-none' href='https://twitter.com/hunkstalker' title='Twitter' target='_blank' rel='noopener noreferrer'>
			<Twitter class='text-[#1da1f2]' width='24' height='24' />
		</a>
	</li>
</ul>
