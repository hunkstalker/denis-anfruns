---
interface Props {
  text: string;
  link: string;
  enabledBtn: boolean;
}
const { text, link, enabledBtn } = Astro.props;
---
<a class:list=
  {[
    'Monsterrat text-sm xs:text-md md:text-lg py-4 px-5 rounded-lg',
    {
      'focus': enabledBtn, 'text-gray-500 md:text-lg pointer-events-none cursor-default':!enabledBtn
    }
  ]}
  href={link} title='Mis proyectos'>{text}</a>

<style>
	.focus:hover {
    background-color: #52525B;
    color: white;
	}
</style>