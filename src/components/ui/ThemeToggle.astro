---
import { useTranslations } from '../../i18n/utils'
import themeSun from '../../icons/theme-sun.svg?raw'
import themeMoon from '../../icons/theme-moon.svg?raw'

interface Props {
	lang?: 'es' | 'en' | 'ca'
}

const { lang = 'es' } = Astro.props
const t = useTranslations(lang)

const titleLight = `${t('theme.toggle')} (${t('theme.light')})`
const titleDark = `${t('theme.toggle')} (${t('theme.dark')})`
---

<!-- Script inicial: aplicar tema por defecto (dark) antes del render para evitar FOUC -->
<script is:inline>
	;(() => {
		const safeGet = (k) => {
			try {
				return localStorage.getItem(k)
			} catch {
				return null
			}
		}
		const safeSet = (k, v) => {
			try {
				localStorage.setItem(k, v)
			} catch {}
		}

		const applyTheme = (theme) => {
			const el = document.documentElement
			if (theme === 'light') {
				el.classList.remove('dark')
				// el.style.backgroundColor = '#ffffff'
				el.style.colorScheme = 'light'
			} else {
				el.classList.add('dark')
				// el.style.backgroundColor = '#131313'
				el.style.colorScheme = 'dark'
			}
		}

		const stored = safeGet('theme')
		const theme = stored || 'dark'
		applyTheme(theme)
		if (!stored) safeSet('theme', 'dark')
	})()
</script>

<style>
	#themeToggle:hover path {
		transition: fill 0.2s ease;
	}
</style>

<button
	id="themeToggle"
	data-disable-hover-on-touch="true"
	data-title-light={titleLight}
	data-title-dark={titleDark}
	class="group relative flex h-10 w-10 items-center justify-center rounded-lg border-none p-2 transition-[background-color] duration-200 hover:bg-zinc-100 dark:hover:bg-zinc-800"
	type="button"
	aria-label={t('theme.toggle')}
	aria-pressed="true"
>
	<!-- Sun icon (visible in light mode) -->
	<span
		class="absolute inset-0 flex items-center justify-center text-zinc-500 opacity-100 transition-opacity duration-200 group-hover:text-zinc-900 dark:opacity-0"
	>
		<Fragment set:html={themeSun} />
	</span>

	<!-- Moon icon (visible in dark mode) -->
	<span
		class="absolute inset-0 flex items-center justify-center text-zinc-400 opacity-0 transition-opacity duration-200 dark:opacity-100 dark:group-hover:text-white"
	>
		<Fragment set:html={themeMoon} />
	</span>
</button>

<script is:inline>
	;(() => {
		const btn = document.getElementById('themeToggle')
		if (!btn) return

		const el = document.documentElement

		const safeSet = (k, v) => {
			try {
				localStorage.setItem(k, v)
			} catch {}
		}

		const updateUI = () => {
			const isDark = el.classList.contains('dark')
			const titleLight = btn.getAttribute('data-title-light')
			const titleDark = btn.getAttribute('data-title-dark')

			btn.setAttribute('aria-pressed', String(isDark))
			btn.setAttribute('title', isDark ? titleLight : titleDark)
		}

		// Detectar si es móvil (ancho < 768px, breakpoint md de Tailwind)
		const isMobile = () => window.innerWidth < 768

		// Añadir animación de feedback en móvil con efecto de pulsación
		const addTapFeedback = () => {
			if (!isMobile()) return

			// Añadir clase para animación de feedback
			btn.style.transform = 'scale(0.5)'
			btn.style.transition = 'transform 0.15s ease-out'

			setTimeout(() => {
				btn.style.transform = 'scale(1)'
				setTimeout(() => {
					btn.style.transition = ''
					btn.style.transform = ''
				}, 150)
			}, 100)
		}

		btn.addEventListener(
			'click',
			() => {
				addTapFeedback()

				// Deshabilitar transiciones temporalmente
				el.classList.add('disable-transitions')

				const isDark = el.classList.toggle('dark')

				// Sincronizar estilos inline críticos para evitar flash/inconsistencias
				if (isDark) {
					// el.style.backgroundColor = '#131313'
					el.style.colorScheme = 'dark'
				} else {
					// el.style.backgroundColor = '#ffffff'
					el.style.colorScheme = 'light'
				}

				safeSet('theme', isDark ? 'dark' : 'light')
				updateUI()

				// Reactivar transiciones después de un breve delay
				// setTimeout(0) no es suficiente a veces, 2 frames suele ser más seguro o un timeout pequeño
				window.setTimeout(() => {
					el.classList.remove('disable-transitions')
				}, 20)
			},
			{ passive: true },
		)

		// Sincronizar UI con el estado actual (ya aplicado por el script inicial)
		updateUI()
	})()
</script>
