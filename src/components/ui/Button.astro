---
interface Props {
	text: string
	link: string
	enabled?: boolean
	active?: boolean
}
const { text, link, enabled = true, active = false } = Astro.props

const baseClasses =
	'relative m-2 py-3 px-4 text-sm md:text-lg font-medium rounded-lg transition-[background-color] duration-200 no-underline leading-normal'

const activeClasses = 
	'text-zinc-900 dark:text-white bg-zinc-100 dark:bg-zinc-800'

const enabledClasses = 
	'text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white hover:bg-zinc-100 dark:hover:bg-zinc-800'

const disabledClasses = 
	'cursor-default text-zinc-300 dark:text-zinc-600'
---

{
	active ? (
		<a
			href={link}
			class={`${baseClasses} ${activeClasses}`}
			aria-current="page"
		>
			{text}
		</a>
	) : enabled ? (
		<a
			href={link}
			class={`${baseClasses} ${enabledClasses}`}
		>
			{text}
		</a>
	) : (
		<span class={`${baseClasses} ${disabledClasses}`} aria-disabled="true">
			{text}
		</span>
	)
}
