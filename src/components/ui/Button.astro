---
interface Props {
	text: string
	link: string
	enabled?: boolean
	active?: boolean
}
const { text, link, enabled = true, active = false } = Astro.props

const baseClasses =
	'm-2 py-3 px-4 text-sm md:text-lg rounded-lg inline-block transition-colors no-underline leading-normal'
---

{
	active ? (
		<a
			href={link}
			class={`${baseClasses} text-zinc-700 hover:bg-zinc-600 hover:text-white dark:text-zinc-200`}
			aria-current="page"
		>
			{text}
		</a>
	) : enabled ? (
		<a
			href={link}
			class={`${baseClasses} text-zinc-700 hover:bg-zinc-600 hover:text-white dark:text-zinc-200`}
		>
			{text}
		</a>
	) : (
		<span class={`${baseClasses} cursor-default text-gray-400`} aria-disabled="true">
			{text}
		</span>
	)
}
