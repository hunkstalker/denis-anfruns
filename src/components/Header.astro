---
import experiencieYears from '../utils/experiencieYears'
import { SKILLS } from '../consts'
import { useTranslations } from '../i18n/utils'

interface Props {
	lang?: 'es' | 'en' | 'ca'
}

const { lang = 'es' } = Astro.props
const t = useTranslations(lang)
const years = experiencieYears()
---

<header class='text-center mt-6 sm:mt-16 md:mt-24'>
	<h1 class='text-left md:text-center text-zinc-900 dark:text-white mx-6 md:mx-0 drop-shadow-md text-[3.95rem] sm:text-[4rem] lg:text-[5rem] leading-[80px] font-bold tracking-wide'>
		DENIS ANFRUNS MILL√ÅN
	</h1>

	<h2 class="mx-4 sm:mx-8 md:mx-0 mt-4 sm:mt-6 mb-2 text-lg sm:text-xl md:text-2xl xl:text-3xl font-light dark:text-zinc-300 tracking-wide">
		{t('header.role')}
		<span class="font-normal mx-1 sm:mx-2 text-zinc-500">|</span>
		<span id='experience' class='font-black text-[var(--jade-hover)] dark:text-[var(--jade)]'>+{years} {t('header.years')} {t('header.experience')}</span>
	</h2>

	<p class="mx-4 sm:mx-8 md:mx-0 mt-0 text-base sm:text-lg md:text-xl xl:text-2xl dark:text-zinc-400 font-light max-w-4xl md:mx-auto">
		{t('header.valueProp')}
	</p>

	<ul class='flex flex-wrap gap-2 sm:gap-3 justify-center mt-8 sm:mt-10 md:mt-12 mb-6 sm:mb-8 md:mb-10 px-2'>
		{SKILLS.map(({ name, Icon }) => (
			<li class='px-3 py-1.5 sm:px-4 bg-zinc-200/50 dark:bg-zinc-800/80 text-zinc-700 dark:text-zinc-200 text-xs sm:text-sm rounded-full font-medium flex items-center gap-1.5 sm:gap-2 border border-zinc-300/60 dark:border-zinc-700/60'>
				<Icon className='size-3 sm:size-4' />
				<span>{name}</span>
			</li>
		))}
	</ul>

	<!-- <p class='lg:text-xl md:mt-20 mt-10 font-medium tracking-normal'>{t('header.socials')}</p> -->
</header>
