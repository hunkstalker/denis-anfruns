---
import experiencieYears from '../utils/experiencieYears';
import { SKILLS } from '../consts';
import { useTranslations } from '../i18n/utils';

interface Props {
	lang?: 'es' | 'en' | 'ca';
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
const years = experiencieYears();
---

<header class="text-center mt-10 sm:mt-24">
	<h1 class="text-left md:text-center dark:text-white mx-6 md:mx-0 text-[3.95rem] sm:text-[4rem] lg:text-[5rem] leading-none font-bold tracking-wide">
		DENIS ANFRUNS MILL√ÅN
	</h1>

	<h2 class="mx-8 sm:mx-0 mt-6 mb-2 text-2xl xl:text-3xl font-light dark:text-zinc-300 tracking-wide">
		{t('header.role')}
		<span class="font-normal mx-2 text-zinc-500">|</span>
		<span id="experience" class="font-black text-[var(--jade-hover)] dark:text-[var(--jade)]">
			+{years} {t('header.years')} {t('header.experience')}
		</span>
	</h2>

	<p class="mx-8 sm:mx-0 mt-0 text-xl xl:text-2xl dark:text-zinc-400 font-light max-w-4xl md:mx-auto">
		{t('header.valueProp')}
	</p>

	<ul class="flex flex-wrap gap-3 justify-center mt-12 mb-10">
		{SKILLS.map(({ name, icon: Icon }) => (
			<li class="px-4 py-1.5 bg-zinc-200/50 dark:bg-zinc-800/80 text-zinc-700 dark:text-zinc-200 text-sm rounded-full font-medium flex items-center gap-2 transition-transform hover:scale-105 cursor-default border border-zinc-300/60 dark:border-zinc-700/60">
				<Icon className="size-4" />
				<span>{name}</span>
			</li>
		))}
	</ul>
</header>