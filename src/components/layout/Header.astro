---
import experiencieYears from '../../utils/experiencieYears'
import { SKILLS } from '../../consts'
import { useTranslations } from '../../i18n/utils'

interface Props {
	lang?: 'es' | 'en' | 'ca'
}

const { lang = 'es' } = Astro.props
const t = useTranslations(lang)
const years = experiencieYears()
---

<style>
	.animate-fade-in-up {
		opacity: 0;
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.delay-100 { animation-delay: 0.1s; }
	.delay-200 { animation-delay: 0.2s; }
	.delay-300 { animation-delay: 0.3s; }

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

<header class="mt-6 text-center sm:mt-16 md:mt-24">
	<h1
		class="animate-fade-in-up transition-none mx-6 text-left text-[3.95rem] font-bold leading-[80px] tracking-wide text-zinc-900 drop-shadow-md dark:text-white sm:text-[4rem] md:mx-0 md:text-center lg:text-[5rem]"
	>
		DENIS ANFRUNS MILL√ÅN
	</h1>

	<h2
		class="animate-fade-in-up delay-100 transition-none text-lg mx-4 mb-2 mt-4 font-light tracking-wide dark:text-zinc-300 sm:mx-8 sm:mt-6 sm:text-xl md:mx-0 md:text-2xl xl:text-3xl"
	>
		{t('header.role')}
		<span class="mx-1 font-normal text-zinc-500 sm:mx-2">|</span>
		<span id="experience" class="font-black text-[var(--jade-hover)] dark:text-[var(--jade)]"
			>+{years} {t('header.years')} {t('header.experience')}</span
		>
	</h2>

	<p
		class="animate-fade-in-up delay-200 transition-none sm:text-lg mx-4 mt-0 max-w-4xl text-base font-light dark:text-zinc-400 sm:mx-8 md:mx-0 md:mx-auto md:text-xl xl:text-2xl"
	>
		{t('header.valueProp')}
	</p>

	<ul
		class="animate-fade-in-up delay-300 mb-6 mt-8 flex flex-wrap justify-center gap-2 px-2 sm:mb-8 sm:mt-10 sm:gap-3 md:mb-10 md:mt-12"
	>
		{
			SKILLS.map(({ name, Icon }) => (
				<li class="text-xs flex items-center gap-1.5 rounded-full border border-zinc-300/60 bg-zinc-200/50 px-3 py-1.5 font-medium text-zinc-700 dark:border-zinc-700/60 dark:bg-zinc-800/80 dark:text-zinc-200 sm:gap-2 sm:px-4 sm:text-sm">
					<Icon className="size-3 sm:size-4" />
					<span>{name}</span>
				</li>
			))
		}
	</ul>

	<!-- <p class='lg:text-xl md:mt-20 mt-10 font-medium tracking-normal'>{t('header.socials')}</p> -->
</header>
