---
interface Props {
  text: string;
  link: string;
  enabledBtn: boolean;
}
const { text, link, enabledBtn } = Astro.props;
---
<button class='m-5 cursor-default' type="button">
  <a class:list=
    {[
      'text-sm xs:text-md md:text-lg rounded-lg',
      {
        'focus': enabledBtn, 'text-gray-400 md:text-lg pointer-events-none cursor-default':!enabledBtn
      }
    ]}
    href={link} title='Mis proyectos'>{text}
  </a>
  {!enabledBtn && (<p class="mt-2 ml-5 italic text-xs xs:text-xs md:text-md rounded-lg">¡Próximamente!</p>)}
</button>

<style>
	.focus:hover {
    background-color: #52525B;
    color: white;
	}
</style>