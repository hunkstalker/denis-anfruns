---
interface Props {
	text: string
	link: string
	enabled?: boolean
	active?: boolean
}
const { text, link, enabled = true, active = false } = Astro.props

const baseClasses = 'm-2 py-3 px-4 text-sm md:text-lg rounded-lg inline-block transition-colors no-underline leading-normal'
---

{
	active ? (
		<a
			href={link}
			class={`${baseClasses} text-zinc-700 dark:text-zinc-200 hover:bg-zinc-600 hover:text-white`}
			aria-current="page"
			onclick="event.preventDefault()">
			{text}
		</a>
	) : enabled ? (
		<a
			href={link}
			class={`${baseClasses} text-zinc-700 dark:text-zinc-200 hover:bg-zinc-600 hover:text-white`}>
			{text}
		</a>
	) : (
		<span class={`${baseClasses} text-gray-400 cursor-default`} aria-disabled='true'>
			{text}
		</span>
	)
}
