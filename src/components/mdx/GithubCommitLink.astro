---
import GithubIcon from '../../icons/github.svg';
import ExternalLink from '../../icons/external-link.svg';

interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-5 px-5 py-3 rounded-md bg-zinc-100 dark:bg-zinc-800 hover:bg-zinc-200 dark:hover:bg-zinc-700 text-zinc-700 dark:text-zinc-300 transition-colors no-underline group"
>
  <GithubIcon class="w-5 h-5 text-zinc-900 dark:text-zinc-100" />
  <span class="text-base border-none text-zinc-900 dark:text-zinc-100">
    {title}
  </span>
  <ExternalLink class="w-5 h-5 text-zinc-400 group-hover:text-zinc-600 dark:group-hover:text-zinc-200 transition-colors" />
</a>
