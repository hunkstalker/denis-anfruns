---
import GithubIcon from '../../icons/github.svg'
import ExternalLink from '../../icons/external-link.svg'

interface Props {
	href: string
	title: string
}

const { href, title } = Astro.props
---

<a
	href={href}
	target="_blank"
	rel="noopener noreferrer"
	class="group inline-flex items-center gap-5 rounded-md bg-zinc-900 px-5 py-3 text-white no-underline transition-colors hover:bg-zinc-800 dark:bg-zinc-100 dark:text-zinc-900 dark:hover:bg-zinc-200"
>
	<GithubIcon class="h-5 w-5 text-zinc-100 dark:text-zinc-900" />
	<span class="border-none text-base font-medium">
		{title}
	</span>
	<ExternalLink
		class="h-5 w-5 text-zinc-400 transition-colors group-hover:text-zinc-200 dark:text-zinc-500 dark:group-hover:text-zinc-700"
	/>
</a>
