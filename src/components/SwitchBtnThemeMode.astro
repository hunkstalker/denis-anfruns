---
// Componente: botón alternador de tema (dark por defecto)
---

<!-- Script inicial: aplicar tema por defecto (dark) antes del render para evitar FOUC -->
<script is:inline>
(() => {
  const safeGet = (k) => { try { return localStorage.getItem(k); } catch { return null; } };
  const safeSet = (k, v) => { try { localStorage.setItem(k, v); } catch {} };
  
  const applyTheme = (theme) => {
    const el = document.documentElement;
    if (theme === 'light') {
      el.classList.remove('dark');
      el.style.backgroundColor = '#ffffff';
      el.style.colorScheme = 'light';
    } else {
      el.classList.add('dark');
      el.style.backgroundColor = '#131313';
      el.style.colorScheme = 'dark';
    }
  };

  const stored = safeGet('theme');
  const theme = stored || 'dark';
  applyTheme(theme);
  if (!stored) safeSet('theme', 'dark');
})();
</script>

<button id="themeToggle" data-disable-hover-on-touch="true"
        class="border-none rounded-lg transition-all duration-75 ease-in-out md:hover:bg-[#D4D4D8] md:dark:hover:bg-[#52525B] md:hover:opacity-100 md:hover:scale-110"
        type="button"
        aria-label="Theme toggle"
        aria-pressed="true">
  <div class="p-2 rounded-lg">
    <svg width="24" fill-rule="evenodd" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
      <path class="sun fill-[--tangerine-hover] dark:fill-transparent" d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
      <path class="moon fill-transparent dark:fill-slate-300" d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z" fill-rule="evenodd"/>
    </svg>
  </div>
</button>

<script is:inline>
(() => {
  const btn = document.getElementById('themeToggle');
  if (!btn) return;

  const el = document.documentElement;
  const safeGet = (k) => { try { return localStorage.getItem(k); } catch { return null; } };
  const safeSet = (k, v) => { try { localStorage.setItem(k, v); } catch {} };

  const updateUI = () => {
    const isDark = el.classList.contains('dark');
    btn.setAttribute('aria-pressed', String(isDark));
    btn.setAttribute('title', isDark ? 'Cambiar a claro' : 'Cambiar a oscuro');
  };

  // Detectar si es móvil (ancho < 768px, breakpoint md de Tailwind)
  const isMobile = () => window.innerWidth < 768;

  // Añadir animación de feedback en móvil con efecto de pulsación
  const addTapFeedback = () => {
    if (!isMobile()) return;
    
    // Añadir clase para animación de feedback
    btn.style.transform = 'scale(0.5)';
    btn.style.transition = 'transform 0.15s ease-out';
    
    setTimeout(() => {
      btn.style.transform = 'scale(1)';
      setTimeout(() => {
        btn.style.transition = '';
        btn.style.transform = '';
      }, 150);
    }, 100);
  };

  btn.addEventListener('click', () => {
    addTapFeedback();
    const isDark = el.classList.toggle('dark');
    
    // Sincronizar estilos inline críticos para evitar flash/inconsistencias
    if (isDark) {
      el.style.backgroundColor = '#131313';
      el.style.colorScheme = 'dark';
    } else {
      el.style.backgroundColor = '#ffffff';
      el.style.colorScheme = 'light';
    }

    safeSet('theme', isDark ? 'dark' : 'light');
    updateUI();
  }, { passive: true });

  // Sincronizar UI con el estado actual (ya aplicado por el script inicial)
  updateUI();
})();
</script>